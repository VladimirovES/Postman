							"});\r",
							"\r",
							"// 2) Проверка структуры json в ответе.\r",
							"\r",
							"var schema = {\r",
							"    \r",
							"    \"type\":\"object\",\r",
							"    \"required\":[\"age\",\"name\", \"salary\"],\r",
							"    \"properties\": {\r",
							"        \"age\":{\"type\":\"number\"},\r",
							"        \"name\":{\"type\":\"string\"},\r",
							"        \"salary\":{\r",
							"        \"type\": \"array\",\r",
							"        \"items\": [\r",
							"            {\"type\":\"number\"},\r",
							"            {\"type\":\"string\"},\r",
							"            {\"type\":\"string\"}\r",
							"        ]\r",
							"        }\r",
							"    }\r",
							"};\r",
							"    \r",
							"\r",
							"var resp = pm.response.json();    \r",
							"\r",
							"pm.test('Schema is valid', function () {\r",
							"    pm.expect(tv4.validate(resp, schema)).to.be.true;\r",
							"\r",
							"});\r",
							"\r",
							"// console.log(tv4.error.dataPath);\r",
							"\r",
							"// 3) В ответе указаны коэффициенты умножения salary, напишите тесты по проверке правильности результата перемножения на коэффициент.\r",
							"\r",
							"let req = request.data;\r",
							"let salary_req = req.salary;\r",
							"let salaryInt_req = parseInt(salary_req);\r",
							"\r",
							"let first = resp.salary[0];\r",
							"\r",
							"let second = resp.salary[1];\r",
							"let secondInt = parseInt(second);\r",
							"\r",
							"let third = resp.salary[2];\r",
							"let thirdInt = parseInt(third);\r",
							"\r",
							"let salaryInt = parseInt(resp.salary);\r",
							"\r",
							"pm.test (\"Salary = Salary [0]\", function (){\r",
							"    pm.expect(salaryInt_req).to.eql(first)\r",
							"});\r",
							"\r",
							"console.log(\"salary from request = \", salaryInt_req, \"Salary from response [0] = \", first);\r",
							"\r",
							"pm.test (\"salary *2 = salary[1]\", function (){\r",
							"    pm.expect(salaryInt_req*2).to.eql(secondInt)\r",
							"});\r",
							"\r",
							"console.log(\"salary from request x2 = \", salaryInt_req*2, \"Salary from response [1] = \", secondInt);\r",
							"\r",
							"pm.test (\"salary*3 = salary [2]\", function (){\r",
							"    pm.expect(thirdInt/salaryInt_req).to.eql(3)\r",
							"});\r",
							"\r",
							"// pm.test(\"2312\",function(){\r",
							"//     pm.expect(thirdInt/salaryInt_req).to.\r",
							"// }\r",
							"\r",
